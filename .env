# Root-level defaults for docker compose
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:5173

# Database
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=singre
MYSQL_USER=singre
MYSQL_PASSWORD=singre

# Host port overrides (optional)
NGINX_HOST_PORT=8080
FRONTEND_HOST_PORT=5173
PHPFPM_HOST_PORT=9000
MYSQL_HOST_PORT=3306
REDIS_HOST_PORT=6379
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025

# Frontend build target (final-static | final-built)
FRONTEND_DOCKER_TARGET=final-static

# Backend image tags (prod)
BACKEND_TAG=latest
FRONTEND_TAG=latest

# Container registry (CI/CD)
REGISTRY=ghcr.io
IMAGE_ORG=your-org

# Secrets to set in production
# APP_KEY=

# Monitoring (prod)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SLACK_WEBHOOK_URL=

# Backup retention
BACKUP_RETENTION_DAYS=7

# Timezone
TZ=UTC
